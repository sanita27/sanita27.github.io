{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map showing Press Freedom Index scores by country, filtered by continent.",
  "title": "Press Freedom Index Scores by Country",
  "width": 880,
  "height": 400,
  "params": [
    {
      "name": "selectedContinent",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent: "
      }
    },
    {
      "name": "projectionCenter",
      "expr": "selectedContinent === 'All' ? [0, 0] : selectedContinent === 'Africa' ? [20, 0] : selectedContinent === 'Asia' ? [100, 40] : selectedContinent === 'Europe' ? [10, 50] : selectedContinent === 'North America' ? [-100, 40] : selectedContinent === 'Oceania' ? [140, -25] : selectedContinent === 'South America' ? [-60, -15] : [0, 0]"
    },
    {
      "name": "projectionScale",
      "expr": "selectedContinent === 'All' ? 150 : 300"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/sanita27/sanita27.github.io/main/countries.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/sanita27/sanita27.github.io/main/updated_merged_data_with_year.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "Country",
        "fields": [
          "Score",
          "Continent"
        ]
      }
    },
    {
      "filter": "selectedContinent == 'All' || datum.Continent == selectedContinent"
    },
    {
      "calculate": "datum.Country === 'Ivory Coast' ? 'CÃ´te dIvoire' : datum.Country === 'United States' ? 'United States of America' : datum.Country === 'Tanzania' ? 'Tanzania, United Republic of' : datum.Country === 'Democratic Republic of Congo' ? 'Congo, Democratic Republic of the' : datum.Country === 'Serbia' ? 'Republic of Serbia' : datum.Country",
      "as": "Country"
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {
      "expr": "projectionCenter"
    },
    "scale": {
      "expr": "projectionScale"
    }
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Score",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [
          0,
          100
        ],
        "range": [
          "#d73027",
          "#fee08b",
          "#1a9850"
        ]
      },
      "legend": {
        "title": "Press Freedom Score"
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Score",
        "type": "quantitative"
      }
    ]
  }
}